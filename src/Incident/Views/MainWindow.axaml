<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:base="clr-namespace:Incident.ViewModels.Base"
        xmlns:controls="clr-namespace:Incident.Controls"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Incident.Views.MainWindow"
        Title="Incident"
        x:DataType="base:MainViewModelBase">

    <Grid>
		<Grid>
            <controls:RootContent
                ItemsSource="{Binding RootMessages}"
                IsVisible="{Binding }"/>
        </Grid>
    </Grid>
</Window>
